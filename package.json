{
	"name": "@lookwe/utils",
	"description": "Lookwe utils",
	"homepage": "https://github.com/Lookwe69/utils",
	"bugs": {
		"url": "https://github.com/Lookwe69/utils/issues"
	},
	"keywords": [
		"lui utils",
		"web-components utils",
		"typescript",
		"lit utils"
	],
	"author": "Lookwe",
	"version": "0.0.0-development",
	"type": "module",
	"scripts": {
		"build": "rollup --config rollup-dist.config.js",
		"build:watch": "npm run build -- --watch",
		"build:prepack": "rollup --config rollup-prepack.config.js",
		"clean": "rm -rf dist && rm -rf coverage && rm -rf internal",
		"lint": "npm run lint:eslint && npm run lint:ts",
		"lint:eslint": "eslint 'src/**/*.ts'",
		"lint:ts": "tsc --noEmit",
		"format": "prettier --check --ignore-path .gitignore --ignore-path .prettierignore .",
		"format:fix": "npm run format -- --write && npm run format -- --write --plugin=@homer0/prettier-plugin-jsdoc",
		"test": "npm run build && wtr && MODE=prod wtr",
		"test:dev": "npm run build && wtr",
		"test:dev:watch": "npm run build && wtr --watch",
		"test:prod": "MODE=prod wtr",
		"test:prod:watch": "npm run build && MODE=prod wtr --watch",
		"test:coverage": "npm run test -- --coverage",
		"prepare-pack": "npm run clean && npm run build:prepack",
		"prepack": "npm run prepare-pack",
		"semantic-release": "semantic-release"
	},
	"files": [
		"index.js",
		"index.d.ts",
		"internal"
	],
	"main": "index.js",
	"module": "index.js",
	"types": "index.d.ts",
	"exports": {
		".": "./index.js",
		"./array": "./internal/array.js",
		"./event-loop": "./internal/event-loop.js",
		"./types": "./internal/types.d.ts"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"tslib": "^2.8.0"
	},
	"devDependencies": {
		"@homer0/prettier-plugin-jsdoc": "^9.1.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.1",
		"@open-wc/testing": "^4.0.0",
		"@rollup/plugin-node-resolve": "^16.0.0",
		"@rollup/plugin-replace": "^6.0.2",
		"@rollup/plugin-typescript": "^12.1.2",
		"@types/mocha": "^10.0.10",
		"@web/dev-server-rollup": "^0.6.4",
		"@web/test-runner": "^0.17.3",
		"@web/test-runner-commands": "^0.9.0",
		"@web/test-runner-playwright": "^0.11.0",
		"eslint": "^9.18.0",
		"globals": "^15.14.0",
		"prettier": "^3.4.2",
		"rollup": "^4.31.0",
		"rollup-plugin-multi-input": "^1.5.0",
		"semantic-release": "^24.2.1",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.21.0"
	}
}
